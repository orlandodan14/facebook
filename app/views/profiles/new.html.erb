<h1>Please fill in your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @profile do |f| %>
    
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>  
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>     

      <%= f.submit "Update Profile", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>